{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@client/*": ["src/client/*"],
            "@shared/*": ["src/shared/*"]
        }
    },
    "include": ["src"]
}